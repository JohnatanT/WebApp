@model Site.Models.PessoaViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h2>Cadastro de Pessoas</h2>

    <!-- Súmario de validação -->
    @Html.ValidationSummary()

    <div class="container">
        @using (Html.BeginForm())
    {

        @Html.HiddenFor(m => Model.Codigo)

        <div class="form-group">
            @Html.LabelFor(m => Model.Cpf)
            @Html.ValidationMessageFor(m => Model.Cpf)
            @Html.TextBoxFor(m => Model.Cpf, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.Nome)
            @Html.ValidationMessageFor(m => Model.Nome)
            @Html.TextBoxFor(m => Model.Nome, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.SobreNome)
            @Html.ValidationMessageFor(m => Model.SobreNome)
            @Html.TextBoxFor(m => Model.SobreNome, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.Email)
            @Html.ValidationMessageFor(m => Model.Email)
            @Html.TextBoxFor(m => Model.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.Telefone)
            @Html.TextBoxFor(m => Model.Telefone, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.DataNascimento)
            @Html.TextBoxFor(m => Model.DataNascimento, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.Captcha)
            @Html.ValidationMessageFor(m => Model.Captcha)
            @Html.TextBoxFor(m => Model.Captcha, new { @class = "form-control" })
        </div>

        <input type="submit" name="Salvar" class="btn btn-success" />

}
    </div>

